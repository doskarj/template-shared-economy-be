{
  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Nodemon",
      "runtimeExecutable": "nodemon",
      "args": ["${workspaceRoot}/src/server.js"],
      "restart": true,
      "protocol": "inspector",
      "stopOnEntry": false,
      "runtimeArgs": [
        "--nolazy",
        "--require",
        "@babel/register"
      ],
      "sourceMaps": true
  },
  ]
}